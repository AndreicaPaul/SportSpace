<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/event_cell_title_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:elevation="2dp"
    android:background="@drawable/corner_border_gray">
    <RelativeLayout
        android:layout_centerVertical="true"
        android:id="@+id/details"
        android:layout_width="110dp"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:id="@+id/time_in_title_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            android:text="@string/mock_time"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:textStyle="bold" />
        <TextView
            android:padding="5dp"
            android:layout_below="@id/time_in_title_cell"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:id="@+id/date_in_title_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_event_black_24dp"
            android:layout_gravity="center"
            android:text="@string/mock_date"
            android:textStyle="bold" />
        <TextView
            android:padding="5dp"
            android:layout_below="@id/date_in_title_cell"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:id="@+id/location_in_title_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_location_on_black_24dp"
            android:text="@string/mock_location"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/separator"
        android:layout_centerVertical="true"
        android:layout_width="1dp"
        android:layout_height="70dp"
        android:background="@color/dark_gray"
        android:layout_toEndOf="@id/details"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/separator"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:id="@+id/sport_keyword"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sport_keyword"
            android:textStyle="bold" />
        <TextView
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.Text.Bold"
            android:id="@+id/sport_type_in_title_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sport_keyword"
            android:textSize="25sp"
            android:text="@string/mock_sport_time"
            android:textStyle="bold" />
        <TextView
            android:layout_below="@id/sport_type_in_title_cell"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:id="@+id/open_spots_keyword"
            style="@style/Base.TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining Spots"
            android:textStyle="bold" />
        <TextView
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.Text.Bold"
            android:id="@+id/open_spots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/open_spots_keyword"
            android:textSize="25sp"
            android:text="4"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
