<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/user_details_card_view"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="5dp"
            tools:ignore="UnusedAttribute">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ro.capac.android.capac2018.ui.custom.RoundedImageView
                    android:contentDescription="@string/description_keyword"
                    android:id="@+id/user_profile_picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/paul"
                    android:background="@drawable/profile_picture_border"/>
                <TextView
                    android:layout_below="@id/user_profile_picture"
                    android:id="@+id/user_first_and_last_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mock_organizer"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:padding="5dp"
                    style="@style/TextAppearance.Text.Bold"
                    />
                <TextView
                    android:padding="5dp"
                    android:gravity="center"
                    android:id="@+id/user_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_first_and_last_name"
                    style="@style/TextAppearance.Text.Light"
                    android:text="@string/mock_membership"
                    android:textSize="15sp"/>
                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/user_level"
                    android:layout_centerHorizontal="true"
                    android:rating="3.5"/>
                </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_below="@id/user_details_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:elevation="5dp"
            tools:ignore="UnusedAttribute">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/logout_in_card_view"
                    android:background="@color/light_gray"/>

                <RelativeLayout
                    android:padding="5dp"
                    android:id="@+id/history_in_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:contentDescription="@string/description_keyword"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_history_black_24dp" />
                    <TextView
                        android:id="@+id/text1"
                        android:layout_toEndOf="@id/image1"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/history_label"
                        style="@style/TextAppearance.Text.Regular"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_below="@id/text1"
                        android:layout_toEndOf="@id/image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:text="@string/history_label_description"/>
                </RelativeLayout>
                <View
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/history_in_card_view"
                    android:background="@color/light_gray"/>

                <RelativeLayout
                    android:padding="5dp"
                    android:layout_below="@id/history_in_card_view"
                    android:id="@+id/leaderboards_in_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:contentDescription="@string/description_keyword"
                        android:layout_marginEnd="5dp"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_stars_black_24dp"/>
                    <TextView
                        android:id="@+id/text2"
                        android:layout_toEndOf="@id/image2"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/leaderboards_label"
                        style="@style/TextAppearance.Text.Regular"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_below="@id/text2"
                        android:layout_toEndOf="@id/image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:text="@string/leaderboards_label_description"/>
                </RelativeLayout>
                <View
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/leaderboards_in_card_view"
                    android:background="@color/light_gray"/>

                <RelativeLayout
                    android:padding="5dp"
                    android:layout_below="@id/leaderboards_in_card_view"
                    android:id="@+id/settings_in_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:contentDescription="@string/description_keyword"
                        android:layout_marginEnd="5dp"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_settings_black_24dp"/>
                    <TextView
                        android:id="@+id/text3"
                        android:layout_toEndOf="@id/image3"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_label"
                        style="@style/TextAppearance.Text.Regular"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_below="@id/text3"
                        android:layout_toEndOf="@id/image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:text="@string/settings_label_description"/>
                </RelativeLayout>
                <View
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/settings_in_card_view"
                    android:background="@color/light_gray"/>

                <RelativeLayout
                    android:padding="5dp"
                    android:layout_below="@id/settings_in_card_view"
                    android:id="@+id/terms_privacy_in_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:contentDescription="@string/description_keyword"
                        android:layout_marginEnd="5dp"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/image4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_lock_black_24dp"/>
                    <TextView
                        android:id="@+id/text4"
                        android:layout_toEndOf="@id/image4"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_label"
                        style="@style/TextAppearance.Text.Regular"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_below="@id/text4"
                        android:layout_toEndOf="@id/image4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:text="@string/terms_label_description"/>
                </RelativeLayout>
                <View
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/terms_privacy_in_card_view"
                    android:background="@color/light_gray"/>
                <RelativeLayout
                    android:padding="5dp"
                    android:layout_below="@id/terms_privacy_in_card_view"
                    android:id="@+id/feedback_help_in_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:contentDescription="@string/description_keyword"
                        android:layout_marginEnd="5dp"
                        android:padding="10dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/image5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_help_black_24dp"/>
                    <TextView
                        android:id="@+id/text5"
                        android:layout_toEndOf="@id/image5"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feedback_label"
                        style="@style/TextAppearance.Text.Regular"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_below="@id/text5"
                        android:layout_toEndOf="@id/image5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:text="@string/feedback_label_description"/>
                </RelativeLayout>
                <View
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/feedback_help_in_card_view"
                    android:background="@color/light_gray"/>
                <RelativeLayout
                    android:padding="5dp"
                    android:id="@+id/logout_in_card_view"
                    android:layout_below="@id/feedback_help_in_card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:contentDescription="@string/description_keyword"
                        android:padding="10dp"
                        app:srcCompat="@drawable/ic_cancel_black_24dp" />
                    <TextView
                        android:id="@+id/text"
                        android:layout_toEndOf="@id/image"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Log Out"
                        style="@style/TextAppearance.Text.Regular"
                        android:textSize="20sp"/>
                    <TextView
                        android:layout_below="@id/text"
                        android:layout_toEndOf="@id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:text="Exit your account, but you shall return..."/>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>